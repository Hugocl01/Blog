---
const { title, url, date, readingTime, description, author, image, tags } =
    Astro.props;
---

<a href={url} class="no-underline">
    <div class="card">
        <div class="">
            <div class="">
                <p>{date}</p>
                <p>Tiempo de lectura: {readingTime}</p>
                <p>{author}</p>
                <img src={image.url} alt={image.alt} />
            </div>
            <h3 class="">{title}</h3>
            <div class="tags">
                {tags.map((tag) => <span class="tag">{tag}</span>)}
            </div>
            <p class="">{description}</p>
        </div>
        <p class="">Leer más →</p>
    </div>
</a>

<style>
    @import url(../styles/global.css);

    .card {
        width: 100%;
        outline: 1px solid var(--border-a);
        border-radius: 10px;
        padding: 2rem;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        gap: 12px;
        justify-content: flex-start;
    }

    .tag {
        color: var(--text-projects-span);
        font-size: 1rem;
        background-color: var(--background-span);
        outline: 1px solid var(--border-a);
        border-radius: 6px;
        padding: 4px 8px;
    }
</style>
