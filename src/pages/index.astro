---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
import CardPost from "../components/CardPost.astro";
const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "Blog";
---

<BaseLayout pageTitle={pageTitle}>
    <h2>Aquí comentaré todo mi proceso en el desarrollo web.</h2>
    <section class="">
        {allPosts.slice(0, 3).map((post) => <CardPost url={post.url} title={post.frontmatter.title} date={post.frontmatter.pubDate} description={post.frontmatter.description}/>)}
    </section>
</BaseLayout>